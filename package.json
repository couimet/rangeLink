{
  "name": "rangelink-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "RangeLink monorepo - Core library and IDE extensions",
  "repository": {
    "type": "git",
    "url": "https://github.com/couimet/rangelink"
  },
  "license": "MIT",
  "scripts": {
    "clean": "pnpm -r clean",
    "compile": "pnpm clean && pnpm -r compile",
    "enable-pnpm": "corepack enable",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "install-local:vscode-extension:both": "pnpm --filter rangelink-vscode-extension install-local",
    "install-local:vscode-extension:cursor": "pnpm --filter rangelink-vscode-extension install-local:cursor",
    "install-local:vscode-extension:vscode": "pnpm --filter rangelink-vscode-extension install-local:vscode",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package:vscode-extension": "pnpm --filter rangelink-vscode-extension package",
    "publish:vscode-extension": "pnpm --filter rangelink-vscode-extension publish",
    "test": "pnpm -r test",
    "watch": "pnpm -r --parallel watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^17.10.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-packagejson": "^2.5.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
