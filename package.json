{
  "name": "codeanchor",
  "displayName": "CodeAnchor",
  "description": "Create sharable links to code ranges in your files. Perfect for documentation, AI prompts, and team collaboration.",
  "version": "0.1.0",
  "publisher": "codeanchor",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "reference",
    "anchor",
    "link",
    "range",
    "citation",
    "documentation",
    "ai"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeanchor.createAnchor",
        "title": "Create Anchor",
        "category": "CodeAnchor",
        "icon": "$(anchor)"
      },
      {
        "command": "codeanchor.createAbsoluteAnchor",
        "title": "Create Absolute Anchor",
        "category": "CodeAnchor",
        "icon": "$(link-external)"
      }
    ],
    "keybindings": [
      {
        "command": "codeanchor.createAnchor",
        "key": "ctrl+k ctrl+a",
        "mac": "cmd+k cmd+a",
        "when": "editorHasSelection || editorTextFocus"
      },
      {
        "command": "codeanchor.createAbsoluteAnchor",
        "key": "ctrl+k ctrl+shift+a",
        "mac": "cmd+k cmd+shift+a",
        "when": "editorHasSelection || editorTextFocus"
      }
    ],
    "configuration": {
      "title": "CodeAnchor",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run test",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=text-summary --coverageReporters=html"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/couimet/codeanchor"
  },
  "bugs": {
    "url": "https://github.com/couimet/codeanchor/issues"
  },
  "homepage": "https://github.com/couimet/codeanchor#readme"
}
