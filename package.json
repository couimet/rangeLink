{
  "name": "rangelink-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "RangeLink monorepo - Core library and IDE extensions",
  "repository": {
    "type": "git",
    "url": "https://github.com/couimet/rangelink"
  },
  "license": "MIT",
  "scripts": {
    "clean": "pnpm -r clean",
    "compile": "pnpm clean && pnpm -r compile",
    "enable-pnpm": "corepack enable",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "package:vscode-extension": "pnpm --filter rangelink-vscode-extension exec vsce package --no-dependencies",
    "publish:vscode-extension": "pnpm --filter rangelink-vscode-extension exec vsce publish --no-dependencies",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
